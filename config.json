                "success_element": {
                    "locator_strategy": {
                        "android": "ANDROID_UIAUTOMATOR",
                        "ios": "ANDROID_UIAUTOMATOR"
                    },
                    "value": {
                        "android": "new UiSelector().resourceId(\"mission\")",
                        "ios": "new UiSelector().className(\"android.widget.Image\").instance(0)"
                    }
                }
            },
            "실행 시간_좌상단_UIAUTOMATOR": {
