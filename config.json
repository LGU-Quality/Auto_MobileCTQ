                "description": "'약속' 검색 후 결과 화면이 뜨기까지의 시간을 측정",
                "init_element": {
                    "locator_strategy": {
                        "android": "ANDROID_UIAUTOMATOR",
                        "ios": "XPATH"
                    },
                    "value": {
                        "android": "new UiSelector().className(\"android.widget.Image\").instance(0)",
                        "ios": "//*[@name='search_bar']"
                    }
                },
                "start_element": {
                    "locator_strategy": {
                        "android": "XPATH",
                        "ios": "XPATH"
                    },
                    "value": {
                        "android": "//android.widget.Button[@text=\"\"]",
                        "ios": "//*[@name='search_bar']"
                    }
                },
                "input_field": {
                    "locator_strategy": {
                        "android": "XPATH",
                        "ios": "XPATH"
                    },
                    "value": {
                        "android": "//android.widget.EditText",
                        "ios": "//*[@name='search_input']"
                    }
                },
                "search_button": {
                    "locator_strategy": {
                        "android": "XPATH",
                        "ios": "XPATH"
                    },
                    "value": {
                        "android": "//android.widget.Button[@text=\"\"]",
                        "ios": "//*[@name='search_btn']"
                    }
